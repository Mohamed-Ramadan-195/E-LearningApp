<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/blue"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_10sdp"
    android:elevation="@dimen/_20sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_4sdp">

        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_6sdp"
            android:text="User Name : "
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mohamed Ramadan"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/user_name_tv"
            app:layout_constraintBottom_toBottomOf="@id/user_name_tv"
            app:layout_constraintStart_toEndOf="@id/user_name_tv" />

        <TextView
            android:id="@+id/email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="Email : "
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="@id/user_name_tv"
            app:layout_constraintTop_toBottomOf="@id/user_name_tv"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mohamed195@gmail.com"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/email_tv"
            app:layout_constraintBottom_toBottomOf="@id/email_tv"
            app:layout_constraintStart_toEndOf="@id/email_tv" />

        <TextView
            android:id="@+id/attendance_grade_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="Attendance Grade : "
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/email_tv"
            app:layout_constraintTop_toBottomOf="@id/email_tv" />

        <TextView
            android:id="@+id/attendance_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/attendance_grade_tv"
            app:layout_constraintBottom_toBottomOf="@id/attendance_grade_tv"
            app:layout_constraintStart_toEndOf="@id/attendance_grade_tv" />

        <TextView
            android:id="@+id/quiz_grade_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="Quiz Grade : "
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/attendance_grade_tv"
            app:layout_constraintTop_toBottomOf="@id/attendance_grade" />

        <TextView
            android:id="@+id/quiz_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/quiz_grade_tv"
            app:layout_constraintBottom_toBottomOf="@id/quiz_grade_tv"
            app:layout_constraintStart_toEndOf="@id/quiz_grade_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>